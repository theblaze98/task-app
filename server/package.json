{
	"name": "server",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
		"watch-compile": "swc src -w --out-dir dist",
		"watch-dev": "nodemon --env-file .env --watch \"dist/**/*\" -e js ./dist/index.js",
		"build": "swc src -d dist",
		"start": "node --env-file .env dist/index.js",
		"tsc": "tsc"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.2",
		"module-alias": "^2.2.3",
		"mongoose": "^7.6.0",
		"resend": "^1.1.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"uuid": "^9.0.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.92",
		"@types/bcryptjs": "^2.4.4",
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.18",
		"@types/jsonwebtoken": "^9.0.3",
		"@types/module-alias": "^2.0.2",
		"@types/morgan": "^1.9.6",
		"@types/node": "^20.8.3",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.4",
		"@types/uuid": "^9.0.5",
		"concurrently": "^8.2.1",
		"morgan": "^1.10.0",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": "^20.8.0"
	}
}
